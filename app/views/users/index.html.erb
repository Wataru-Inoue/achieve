<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <div id="image">
          <%= profile_img(user) %>
        </div>
        <%= user.email %>
        <%#= link_to '詳細', user_path(user), class: 'btn btn-default btn-sm btn-success' %>
        <%# if user.id != current_user.id %>
            <%#= render 'follow_form', user: user %>
        <%# elsif user.id == current_user.id %>
           <%# <p>自分自身はフォローできません</p>
        <%# end %>
        <% if user.id != current_user.id %>
          <li>
            <div class="item">
              <%= link_to user.name, user %>
              <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
            </div>
          <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
          </li>
        <% end %>

      </div>
  <% end %>
</div>
