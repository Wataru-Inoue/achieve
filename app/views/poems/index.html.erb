<h1>ポエム一覧</h1>
<div class="container">
<div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<table>
  <tr>
    <td>タイトル</td>
    <td>内　　容</td>
    <td></td>
  </tr>
<% @poems.each do |poem| %>
<tr>
  <td class="poemtitle"><%= poem.title %></td>
  <td class="poemcontent"><%= poem.content %></td>
  <td class="poembtn"><%= link_to "詳細ページ", poem_path(poem.id), class: 'btn btn-default btn-sm btn-success' %></td>
</tr>
<% end %>
</table>
</div>
</div>