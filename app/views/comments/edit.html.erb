<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <div>
      <%=form_for([@comment.blog, @comment]) do |f| %>
      <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= @comment.errors.count %>件のエラーがあります。</h2>
          <ul>
          <% @comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.hidden_field :blog_id %>
      <div class="field">
        <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
      </div>
      <div class="actions commentBtn">
        <%= f.submit %>
      </div>
      <% end %>
      <%= link_to '戻る', blog_path(@comment.blog) %>
    </div>
  </div>
</div>